<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the shape as a rectangle -->
    <solid android:color="@android:color/white" /> <!-- Background color inside the EditText -->

    <!-- Border properties -->
    <stroke
        android:width="2dp"
        android:color="#6200EE" />

    <!-- Rounded corners for circular effect -->
    <corners android:radius="30dp" /> <!-- Adjust radius for desired roundness -->

    <!-- Add padding inside the EditText -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />
</shape>
